link(href='/components/HUD/auth/auth.css' rel='stylesheet' )
  
script(src='/components/HUD/auth/auth.js')

.authContainer
  .authLabelContainer
    .authLabel Valoria
  .authErrorContainer
    .authError Incorrect Username or Password
  .authForm
    input.authUsername(placeholder="Username")
    input.authPassword(placeholder="Password" type='password')
  .authBtns
    .authLogin(onClick="loginUser()") Login
    .authRegister(onClick="registerUser()") Register
